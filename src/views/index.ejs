<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css" />
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
    <title>Tiendita</title>

</head>

<body>

    <div data-role="page">
        <div data-role="header">
            <div data-role="navbar">
                <h1 style="text-align: center;">Bienvenido</h1>
                <ul>
                    <li><a href="#" data-icon="heart" class="ui-btn-active">Inicio</a></li>
                    <li><a href="#" data-icon="tag" >Productos</a></li>
                    <li><a href="#" data-icon="user">Empleados</a></li>
                </ul>
            </div><!-- /navbar -->
        </div>
        <div data-role="content">
            <form action="/api/products/ " method="POST">
                <label for="txt_codigo_barras">Codigo de barras:</label>
                <input type="text" name="barcode" id="txt_codigo_barras" placeholder="Codigo de barras">

                <label for="txt_descripcion">Descripcion:</label>
                <input type="text" name="description" id="txt_descripcion" placeholder="Descripcion">

                <label for="txt_marca">Marca:</label>
                <input type="text" name="brand" id="txt_marca" placeholder="Marca">

                <label for="txt_price">Precio:</label>
                <input type="text" name="price" id="txt_price" placeholder="Precio">

                <label for="txt_cost">Costo:</label>
                <input type="text" name="cost" id="txt_cost" placeholder="Costo">

                <label for="txt_stock">Stock:</label>
                <input type="text" name="stock" id="txt_stock" placeholder="Stock">

                <label for="txt_expireDate">Fecha de expiracion:</label>
                <input type="date" name="expiredDate" id="txt_expireDate" placeholder="Fecha de expiracion">

                <select name="estatus" id="status" data-role="slider">
                    <option value="0">Inactivo</option>
                    <option value="1">Activo</option>
                </select>

                <button type="submit" id="submit-6" class="ui-shadow ui-btn ui-corner-all ui-mini">Guardar</button>

            </form>
            <form>
                <input data-type="search" id="searchForCollapsibleSet">
            </form>
            <div data-role="collapsibleset" data-filter="true" data-inset="true" id="collapsiblesetForFilter"
                data-input="#searchForCollapsibleSet">

                <% products.forEach((product)=>{ %>
                <div data-role="collapsible" data-filtertext="<%= product.descripction %>">
                    
                        <h3><%= product.description %></h3>
                        <ul data-role="listview" data-inset="false">
                            <li> CÃ³digo de barras: <%= product.barcode %></li>
                            <li> Marca: <%= product.brand %></li>
                            <li> Precio: <%= product.price %></li>
                            <li>Precio de venta: <%= product.cost %></li>
                            <li> Disponibles: <%= product.stock %></li>
                            <li>Caducidad: <%= product.expiredDate %></li>
                            <li>Status: <%= product.status %></li>
                            <li><a href="/api/products/<%= product.barcode %>" class="ui-btn">Editar</a></li>
                            <li><a href="/api/products/delete/<%= product.barcode %>" class="ui-btn">Eliminar</a></li>
                        </ul>
                </div>
                    <% }) %>
            </div>

        </div>
        <div data-role="footer">
            <h5>Desarrollado por Aldo</h5>
        </div>
    </div>

</body>

</html>